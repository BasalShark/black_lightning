<% headers = [:subject, :created_at] %>

<% field_sets = @complaints.map { |complaint| [
  complaint,  
  l(complaint.created_at, format: :longy)
] }%>

<% search_fields = {
    subject_cont:     { slug: 'defaults.subject' },
    description_cont: { slug: 'defaults.description'},
    comments_cont:    { slug: 'defaults.comments'},
} %>

<%= render 'shared/pages/index', resource_class: Complaint, resources: @complaints, headers: headers, field_sets: field_sets, search_fields: search_fields, show_new_button: false %>
