<% content_for :head do %>
    <%= javascript_include_tag "admin/users" %>
<% end %>

<% @title = 'Debts' %>

<% prefix = params[:commit] == "Search" ? "Searching" : "Listing" %>

<% if params[:show_non_members] == "1" %>
    <h1><%= prefix %> All Users</h1>
<% else %>
    <h1><%= prefix %> All Members</h1>
<% end %>

<div class="row">
  <div class="span9">
    <%= search_form_for @q, builder: SimpleForm::FormBuilder, url: :admin_debts, html: { id: "search", class: "form-search" } do |f| %>
        <%= f.input_field :full_name_cont, placeholder: "Name",  required: false %>
        <%= f.input_field :email_cont,     placeholder: "Email", required: false %>
        <%= f.submit :Search, class: 'btn' %>

        <%= f.input :show_in_debt_only, label: "Show In Debt Only", input_html: {id: "show_in_debt_only", checked: params[:show_in_debt_only] == "1" ? true : false, name: "show_in_debt_only" }, as: :boolean %>

    <% end %>
  </div>
  <div class="span3">
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">

        </label>
      </div>
    </div>
  </div>
</div>

<table class="table">
  <tbody>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Maintenance Debts</th>
    <th>Staffing Debts</th>
    <th>Unassociated Staffing Slots</th>
  </tr>
  <% @users.each do |user| %>
      <tr <%= user.in_debt ?  " class = error ": "" %>>
        <td><%= user.email %></td>
        <td><%= link_to "#{user.first_name} #{user.last_name}", admin_debt_path(user) %></td>
        <td><%= user.amount_of_maintenance_debts %></td>
        <td><%= user.amount_of_staffing_debts %></td>
        <td><%= user.amount_of_unassociated_staffing_jobs %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="paginate_holder">
  <%= will_paginate(@users) %>
</div>
