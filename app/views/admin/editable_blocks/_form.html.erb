<%= simple_form_for(@admin_editable_block) do |f| %>
  <%= f.error_notification %>

  
  <div class="form-inputs">

    <% if not @admin_editable_block.persisted? then %>
    <%= f.input :name %>
    <% end %>

    <%= render "admin/shared/md_editor", { :f => f, :field => :content }  %>
    
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', admin_editable_blocks_path, :class => "btn" %>
  </div>
<% end %>