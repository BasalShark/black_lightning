<%= simple_nested_form_for @admin_editable_block, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">

    <% if not @admin_editable_block.persisted? then %>
      <%= f.input :name %>
    <% end %>

    <%= f.input :group,
                :hint => "The section which the block should be displayed under in the admin site",
                :input_html => {
                    :data => {
                       :provide => "typeahead",
                       :source => Admin::EditableBlock.groups
                    },
                    :autocomplete => "off",
                }%>

    <%= render :layout => "admin/shared/md_editor", :locals => { :f => f, :field => :content, :rows => 12 } do %>
      <%= render "admin/shared/md_hints" %>
    <% end %>

    <div class="well form-inline">
      <%= f.simple_fields_for :attachments %>

      <% add_text = '<i class="icon-plus"></i> Add Attachment'.html_safe %>
      <%= f.link_to_add add_text, :attachments, :class => "btn" %>

      <br />

      <small>
        You will need to link to these resources in the page above. <br />
        Use <code>[the link text](/attachments/myattachmentname)</code><br />
        For images, use <code>![img description](/attachments/myattachmentname/thumb)</code>
        to display a thumbnail.
      </small>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', admin_editable_blocks_path, :class => "btn" %>
  </div>
<% end %>