<% @title = 'Editable Blocks' %>

<h1>Editable Blocks</h1>

<div class="accordion" id="ediable_block_accordion">
<% @admin_editable_blocks.each do |group, editable_blocks| %>
  <%= render 'editable_block', :group => group, :editable_blocks => editable_blocks %>
<% end %>
</div>

<br />

<% if can? :create, Admin::EditableBlock %>
<%= link_to 'New Editable block', new_admin_editable_block_path, :class => 'btn' %>
<% end %>