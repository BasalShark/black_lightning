<% fields = { 
  name: @event_tag.name,
  ordering: @event_tag.ordering,
  description: { type: 'markdown', markdown: @event_tag.description } 
} %>

<% content_for :extra_show_actions do %>
  <%= get_link(Show, :index, link_text: 'View All Shows With Tag', query_params: { 'q[event_tags_id_eq]' => @event_tag.id } ) %>
<% end %>

<%= render('shared/pages/show', object: @event_tag, fields: fields) %>
