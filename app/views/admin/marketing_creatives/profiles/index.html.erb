<h1><%= @title %></h1>

<%= search_form_for @q, builder: SimpleForm::FormBuilder, url: :admin_marketing_creatives_profiles, html: { id: "search", class: "form-search form-inline" } do |f| %>
  <%= f.input_field :name_cont,  placeholder: "Name",  required: false %>
  <%= f.input_field :about_cont, placeholder: "About", required: false %>

  <%= submit_tag "Search", class: 'btn' %>
<% end %>

<table class="table">
  <tbody>
      <tr>
        <%= content_tag :th, sort_link(@q, :name, 'Name') %>
        <%= content_tag :th, sort_link(@q, :user_full_name, 'User') %>
        <%= content_tag :th, sort_link(@q, :approved, 'Approved') %>

        <% if can? :edit, MarketingCreatives::Profile %>
            <th></th>
        <% end %>
      </tr>

      <% @profiles.each do |profile| %>
        <tr>
          <%= get_link profile, :show, wrap_tag: 'td' %>

          <td>
            <% if profile.user.present? %>
              <%= get_link profile.user, :show %>
            <% else %>
              No User
            <% end%>
          </td>

          <td><%= bool_icon(profile.approved) %></td>

          <%= get_link profile, :edit, wrap_tag: 'td' %>
        </tr>
      <% end %>
  </tbody>
</table>

<%= get_link MarketingCreatives::Profile, :new %>