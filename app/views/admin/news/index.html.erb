<% headers = [:title, :publish_date, :show_public] %>

<% field_sets = @news.map { |news| [
  news,
  l(news.publish_date, format: :short),
  bool_icon(news.show_public)
] }%>

<% search_fields = {
    title_cont: { slug: 'defaults.title' },
    body_cont:  { slug: 'defaults.body' }
} %>

<%= render 'shared/pages/index', resource_class: News, resources: @news, headers: headers, field_sets: field_sets, search_fields: search_fields %>
