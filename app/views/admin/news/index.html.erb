<h1>News</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Publish Date</th>
    <th>Show public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.publish_date %></td>
    <td><%= news.show_public %></td>
    <td><%= link_to 'Show', admin_news_path(news) %></td>
    
    <% if can? :edit, news %>
    <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
    <% end %>
    
    <% if can? :delete, news %>
    <td><%= link_to 'Destroy', admin_news_path(news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, News %>
<%= link_to 'New News', new_admin_news_path, :class => 'btn' %>
<% end %>