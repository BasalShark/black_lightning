<% headers = [:name, ''] %>

<% field_sets = @picture_tags.map { |picture_tag| { 
  fields: [
    picture_tag,  
    get_link_to_pictures_for_tag(picture_tag)
  ] } } %>

<% search_fields = {
    name_cont:        { slug: 'defaults.name' },
    description_cont: { slug: 'defaults.description'}
} %>

<%= render 'shared/pages/index', resource_class: PictureTag, resources: @picture_tags, headers: headers, field_sets: field_sets, search_fields: search_fields %>
