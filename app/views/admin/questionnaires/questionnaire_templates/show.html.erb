<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @template.name %>
</p>

<h3>Questions</h3>

<% @template.questions.each do |question| %>
  <p>
    <b>Question:</b>
    <%= question.question_text %>
  </p>

  <p>
    <b>Type:</b>
    <%= question.response_type %>
  </p>

  <hr />
<% end %>

<%= link_to 'Edit', edit_admin_questionnaires_questionnaire_template_path(@template), :class => "btn" %>
<%= link_to 'Back', admin_questionnaires_questionnaire_templates_path, :class => "btn"  %>
