<h1>Listing Questionnaires</h1>

<table class="table">
  <tr>
    <th>Show</th>

    <% if can? :edit, Admin::Questionnaires::Questionnaire %>
    <th></th>
    <% end %>

    <% if can? :delete, Admin::Questionnaires::Questionnaire %>
    <th></th>
    <% end %>
  </tr>

<% @admin_questionnaires_questionnaires.each do |admin_questionnaires_questionnaire| %>
  <tr>
    <td><%= link_to admin_questionnaires_questionnaire.show.name, answer_admin_questionnaires_questionnaire_path(admin_questionnaires_questionnaire), :title => "Answer Questionnaire" %></td>

    <% if can? :edit, admin_questionnaires_questionnaire %>
    <td><%= link_to 'Edit', edit_admin_questionnaires_questionnaire_path(admin_questionnaires_questionnaire) %></td>
    <% end %>

    <% if can? :delete, admin_questionnaires_questionnaire %>
    <td><%= link_to 'Destroy', admin_questionnaires_questionnaire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Admin::Questionnaires::Questionnaire %>
  <p>Please create questionnaires from the show details form.</p>
<% end %>
