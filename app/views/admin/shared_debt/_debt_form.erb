<%= simple_horizontal_form_for debt do |f| %>
  <%= render('shared/pages/form', f: f) do %>
    <% unless debt.persisted? %>
      <%= f.input :association, collection: User.all %>

      <%= f.input :show_id, collection: Show.this_year.selection_collection %>
    <% end %>

    <%= f.input :due_by %>
  <% end %>
<% end %>
