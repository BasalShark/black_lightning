<%= simple_horizontal_form_for [@staffing_template] do |f| %>
  <%= render('shared/pages/form', f: f) do %>
    <%= f.input :name %>

    <div id="staffing-jobs">
      <h3>Jobs</h3>
      <%= f.simple_fields_for(:staffing_jobs) do |staffing_job| %>
        <% render 'staffing_job_fields', f: staffing_job %>
      <% end %>

      <%= link_to_add f, :staffing_jobs %>
    </div>
  <% end %>
<% end %>
