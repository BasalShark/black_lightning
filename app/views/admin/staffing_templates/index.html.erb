<h1>Staffing Templates</h1>

<table class="table">
  <tr>
    <th>Name</th>

    <% if can? :edit, Admin::StaffingTemplate %>
    <th></th>
    <% end %>

    <% if can? :delete, Admin::StaffingTemplate %>
    <th></th>
    <% end %>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.name %></td>

    <% if can? :edit, template %>
    <td><%= link_to 'Edit', edit_admin_staffing_template_path(template) %></td>
    <% end %>

    <% if can? :delete, template %>
    <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Admin::StaffingTemplate %>
  <% new_text = '<i class="fa fa-plus"></i> New Template'.html_safe %>
  <%= link_to new_text, new_admin_staffing_template_path, :class => "btn" %>
<% end %>
