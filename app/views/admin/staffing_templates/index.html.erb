<h1><%= @title %></h1>

<table class="table">
  <tr>
    <th>Name</th>

    <% if can? :edit, Admin::StaffingTemplate %>
      <th></th>
    <% end %>

    <% if can? :delete, Admin::StaffingTemplate %>
      <th></th>
    <% end %>
  </tr>

<% @staffing_templates.each do |template| %>
  <tr>
    <td><%= template.name %></td>

    <%= get_link template, :edit, wrap_tag: 'td'%>

    <%= get_link template, :destroy, wrap_tag: 'td'%>
  </tr>
<% end %>
</table>

<br />

  <%= get_link Admin::StaffingTemplate, :new %>
  <%= get_link Admin::Staffing, :index %>