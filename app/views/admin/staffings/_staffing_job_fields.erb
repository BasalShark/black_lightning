<%# Based on the very similar _team_member_fields.erb file %>

<%= render layout: '/shared/form/fields_for_template', locals: { 
  f: f,
  div_class_additions: 'job form-inline'
} do %>
    <%= f.hidden_field :id %>

    <% name_field = [f.input(:name, placeholder: 'Job', label: false)] %>

    <%= render 'shared/form/user_typeahead_field', f: f, insert_fields: name_field %>

    <%= link_to_remove f %>
<% end %>
