<h1>Listing all users</h1>
<table class="table">
	<tbody>
		<tr>
			<th>Email</th>
			<th>Name</th>
			<th></th>
            <th></th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.email %></td>
			<td><%= "#{user.first_name} #{user.last_name}" %></td>
            
            <% if can? :edit, user %>
			<td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
            <% end %>
            
            <% if can? :delete, user %>
            <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<% if can? :create, User %>
<%= link_to 'New user', new_admin_user_path, :class => "btn" %>
<% end %>