<% content_for :head do %>
  <%= javascript_include_tag "admin/users" %>
<% end %>

<% @title = 'Users' %>

<% prefix = params[:search] ? "Searching" : "Listing" %>

<% if params[:show_non_members] %>
  <h1><%= prefix %> All Users</h1>
<% else %>
  <h1><%= prefix %> All Members</h1>
<% end %>

<div class="row">
  <div class="span9">
    <%= form_for admin_users_path, html: { id: "search", class: "form-search" }, method: "GET" do %>
      <div class="input-append">
        <input name="search" type="text" class="input-medium search-query" value="<%= params[:search] %>">
        <button type="submit" class="btn">Search</button>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input id="show_non_members" type="checkbox" <%= "checked" if params[:show_non_members] == "true" %>> Show Non-Members
        </label>
      </div>
    </div>
  </div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user) %></td>

            <td>
            <% if can? :edit, user %>
            <%= link_to 'Edit', edit_admin_user_path(user) %>
            <% end %>
            </td>

            <td>
            <% if can? :delete, user %>
            <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm:         "Deleting " + user.name,
                                                                                   detail:          "If you delete a user, you may also break content which belongs to them. Do not take this decision lightly.<br />Please type the user's full name ",
                                                                                   "type-confirm" => user.name
                                                                                 } %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="paginate_holder">
  <%= will_paginate(@users) %>
</div>

<% if can? :create, User %>
  <% add_text = '<i class="icon-plus"></i> Add User'.html_safe %>
  <%= link_to add_text, new_admin_user_path, :class => "btn" %>
<% end %>