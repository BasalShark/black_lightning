<% @title = 'Users' %>

<h1>Listing All Users</h1>
<table class="table">
    <tbody>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= "#{user.first_name} #{user.last_name}" %></td>

            <td>
            <% if can? :edit, user %>
            <%= link_to 'Edit', edit_admin_user_path(user) %>
            <% end %>
            </td>

            <td>
            <% if can? :delete, user %>
            <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm:         "Deleting " + user.name,
                                                                                   detail:          "If you delete a user, you may also break content which belongs to them. Do not take this decision lightly.<br />Please type the user's full name ",
                                                                                   "type-confirm" => user.name
                                                                                 } %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<% if can? :create, User %>
  <% add_text = '<i class="icon-plus"></i> Add User'.html_safe %>
  <%= link_to add_text, new_admin_user_path, :class => "btn" %>
<% end %>