<h1>Listing venues</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @venues.each do |venue| %>
  <tr>
    <td><%= venue.name %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to 'Edit', edit_admin_venue_path(venue) %></td>
    <td><%= link_to 'Destroy', admin_venues_path(venue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% new_text = '<i class="icon-plus"></i> New Venue'.html_safe %>
<%= link_to new_text, new_admin_venue_path, :class => "btn" %>
