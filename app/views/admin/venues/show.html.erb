<% fields = {
  name: @venue.name,
  tagline: @venue.tagline,
  location: @venue.location,
  image: 'No Image',
  description: render_markdown(@venue.description),
  image: { type: 'image', image: @venue.fetch_image, variant: slideshow_variant },
  gallery: { type: 'content', content: render('/shared/gallery', pictures: @venue.pictures) }
} %>

<% content_for :extra_show_actions do %>
  <%= get_link Show, :index, link_text: 'All Shows in Venue', query_params: { 'q[venue_id_eq]' => @venue.id } %>
<% end %>

<%= render('shared/pages/show', object: @venue, fields: fields) %>
