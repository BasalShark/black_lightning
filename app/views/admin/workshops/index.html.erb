<% @title = 'Workshops' %>

<h1>Workshops</h1>

<%= display_block("Workshops (Members Face)", true) %>

<br />
<br />

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <th>Dates</th>
            <th></th>
            <th></th>
        </tr>
        <% @workshops.each do |workshop| %>
        <tr>
            <td><%= (can? :read, workshop) ? link_to(workshop.name, admin_workshop_path(workshop)) : workshop.name %></td>

            <td><%= workshop.date_range true %></td>

            <td>
            <% if can? :edit, workshop %>
            <%= link_to 'Edit', edit_admin_workshop_path(workshop)%>
            <% end %>
            </td>

            <td>
            <% if can? :delete, workshop %>
            <%= link_to 'Destroy', admin_workshop_path(workshop), method: :delete, data: { "confirm" => "Deleting " + workshop.name,
                                                                                   "detail"  => "Be warned. Things may break if you continue. <br /> Please type the name of the workshop below if you are absolutely sure you want to do this.",
                                                                                   "type-confirm" => workshop.name } %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate(@workshops) %>

<% if can? :create, Workshop %>
  <%= link_to new_admin_workshop_path, :class => "btn" do %>
    <i class="fa fa-plus"></i> Add Workshop
  <% end %>
<% end %>