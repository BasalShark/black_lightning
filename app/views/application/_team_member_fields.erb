<%= render layout: '/shared/form/fields_for_template', locals: { 
        f: f,
        div_class_additions: 'team_member form-inline',
        attributes: [:position, :user]
    } do %>
    <%= f.hidden_field :id %>

    <%- # BOOTSTRAP CHECK: is this a select2 that starts with blank? %>
    <%= f.input_field(:position, collection: position_typeahead, placeholder: 'Position', include_blank: false, allow_custom_input: true) %>
 
    <%= f.input :user, collection: User.all %>

    <%= link_to_remove f %>
<% end %>
