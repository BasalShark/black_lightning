<div class="row">
  <div class="span12">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" href="#search_container">
          <i class="icon-chevron-down"></i> Search Form
        </a>
      </div>
      <div id="search_container" class="accordion-body collapse">
        <div class="accordion-inner">
          <%= search_form_for @q, builder: SimpleForm::FormBuilder, url: :archives_shows_index do |f| %>
            <%= f.input :name_cont,            label: "Show Title",  required: false %>
            <%= f.input :users_full_name_cont, label: "Person Name", required: false %>

            <%= f.input :start_date_gt, as: :date, label: "Start Date", include_blank: true, required: false %>
            <%= f.input :end_date_lt,   as: :date, label: "End Date",   include_blank: true, required: false %>

            <%= f.submit :Search, class: 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12">
    <h1>Previous Shows</h1>
    <hr />

    <% @shows.each do |show| %>
    <article class="media">
      <% image = image_tag show.image.url(:thumb), :class => "media-object" %>
      <%= link_to image, show, :class => "pull-left thumbnail" %>
      <div class="media-body">
        <header class="media-heading">
          <h4 class="media-heading"><%= link_to show.name, show %></h4>
        </header>
        <p>
          <%= show.tagline %>
          <br />
          <span class="show-date"><%= show.date_range(:longy) %></span>
        </p>
        <p><%= link_to 'View Details', show %></p>
      </div>
    </article>
    <hr />

    <% end %>

    <%= will_paginate(@shows) %>
  </div>
</div>