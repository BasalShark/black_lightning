<div class="row">
  <div class="col-md-<%= event.team_members.any? ? '8' : '12' %>">
    <div class="card mb-3">
      <h3 class="card-header">Description</h3>

      <div class="card-body">
        <%= render_markdown event.publicity_text %>

        <% if event.pretix_shown %>
          <%= render 'shared/pretix_widget', event: event %>
        <% end %>
      </div>
    </div>
  </div>

  <% if event.team_members.any? %>
    <div class="col-md-4">
      <div class="card mb-3">
        <h3 class="card-header">Cast and Crew</h3>
        
        <div class="card-body">
          <%= render '/shared/show_team_members', team_members: event.team_members, admin_view: true %>
        </div>
      </div>
    </div>
  <% end %>
</div>
