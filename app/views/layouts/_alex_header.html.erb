<!-- START HEADER SECTION -->
<div class="row">
  <% # BOOTSTRAP: Suspiciously double %>
  <header class="row">
    <% # BOOTSTRAP: visible-phone is deprecated in version 4. %>
    <%= link_to image_tag('BedlamLogoBW.png'), root_url, class: "visible-phone img-fluid", style: "margin-left: 10px; width: 120px; border: 1px solid #000000;" %>
    <% # BOOTSTRAP: visible-phone is deprecated in version 4. %>

    <ul id="nav_collapse" class="nav nav-pills visible-phone">
      <li>
        <a data-toggle="collapse" data-target=".nav-collapse">
          Menu
        </a>
      </li>
    </ul>

    <% # BOOTSTRAP: float-right instead of pull-right?%>
    <ul id="nav_minor" class="pull-right nav nav-pills nav-collapse collapse flex-column">
      <li><a href="http://facebook.com/bedlamtheatre.ed" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
      <li><a href="http://instagram.com/eutc.bedlamtheatre/" target="_blank"><i class="fab fa-instagram"></i></a></li>
      <li><a href="http://twitter.com/bedlamtheatre" target="_blank"><i class="fab fa-twitter"></i></a></li>
      <li><a href="https://www.youtube.com/channel/UCXxyhjT8bPvnl1oVAdRJW1Q" target="_blank"><i class="fab fa-youtube"></i></a></li>
      <li><%= link_to 'EUTC Wiki','https://wiki.bedlamtheatre.co.uk', target: '_blank', title: 'Wiki' %></li>
      <li><%= link_to 'Tickets','https://tickets.bedlamtheatre.co.uk', target: '_blank', title: 'Training' %></li>
      <li><%= link_to 'FoB', 'http://friendsofbedlam.co.uk', target: '_blank', title: 'Friends of Bedlam' %></li>
      <li><%= link_to 'Student Theatre', static_path('student_theatre') %></li>
      <li><%= link_to 'Press',    static_path('press')        %></li>
      <li><%= link_to 'Archives', archives_index_path         %></li>
      <li><%= link_to 'Members',  admin_path                  %></li>
      <li><%= link_to 'Find Us', static_path('find_us')        %></li>
      <li><%= link_to "Log Out", destroy_user_session_path, method: :delete if user_signed_in? %></li>
    </ul>

    <% # BOOTSTRAP: hidden-desktop is deprecated in version 4. %>
    <%= link_to image_tag('Header.png'), root_url, class: "hidden-phone" unless mobile_device? %>

    <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-mdb-toggle="collapse"
          data-mdb-target="#navbarExample01"
          aria-controls="navbarExample01"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <li class="nav-item"><%= link_to 'Shows', shows_path, class: "nav-link" %></li>

          <% if WorkshopCounter.workshop_count > 0 %>
          <li><%= link_to 'Workshops', workshops_path , class: "nav-link" %></li>
          <% end %>

          <li><%= link_to 'News', news_index_path, class: "nav-link" %></li>
          <li><%= link_to 'About', about_index_path, class: "nav-link" %></li>
          <li><%= link_to 'Get Involved', get_involved_index_path, class: "nav-link" %></li>
          <li><%= link_to 'Accessibility', static_path('accessibility'), class: "nav-link" %></li>
          <li><%= link_to 'Contact', static_path('contact'), class: "nav-link" %></li>
        </div>
      </div>
    </nav>
  </header>
</div>
