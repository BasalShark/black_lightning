<p id="notice"><%= notice %></p>

<article>
    <header>
        <h2><%= @news.title %></h2>
        <time datetime="<%= @news.publish_date.strftime("%FT%T%:z") %>"><%= l @news.publish_date, :format => :long %></time>
    </header>

    <%= image_tag @news.image.url(:medium), :class => "float-right span3" %>

    <p><%= render_markdown @news.body %></p>

    <% if @news.publish_date != @news.updated_at %>
    <p>
      <small>
        Last updated:
        <%= l @news.updated_at, :format => :long %>
      </small>
    </p>
    <% end %>

</article>

<%= link_to 'Back', news_index_path %>
