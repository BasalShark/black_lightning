<% id = "#{title.to_url}_container" %>
<% start_open = false if start_open.nil? %>

<div class="card">
  <div class="card-header">
    <a class="btn btn-link stretched-link" type="button" data-toggle="collapse" data-target="#<%= id %>" role="button" aria-expanded="false" aria-controls="#<%= id %>">
      <%= generate_icon_prefix('chevron-down', title) %>
    </a>
  </div>

    <div class="collapse<%= ' show' if start_open %>" id="<%= id %>">
      <div class="card-body" >
    <%= yield %>
    </div>
  </div>
</div>
