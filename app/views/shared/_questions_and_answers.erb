<h3>Questions</h3>

<% answers.includes(:question).each do |answer| %>
  <div>
    <p>
      <b>Question:</b>
    </p>
    <%= render_markdown answer.question.question_text %>
  </div>

  <div>
    <p>
      <b>Response:</b>
    </p>

    <% if answer&.question&.response_type&.downcase == "file" %>
      <%= answer&.file.attached? ? link_to(answer.file.filename, admin_answer_get_file_path(answer)) : "No File Uploaded" %>
    <% else %>
      <% if answer&.answer.present? %>
        <%= render_markdown answer.answer %>
      <% else %>
        <p>This question has not been answered.</p>
      <% end %>
    <% end %>
  </div>

  <hr />
<% end %>
