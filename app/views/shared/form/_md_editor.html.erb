<div class="tab-container md-editor">

  <% require 'securerandom' %>
  <% id = SecureRandom.uuid %>

  <div class="row">
    <div class="col-md-9">
      <div id="<%= id %>_input_field" class="tab-pane active">
        <% rows ||= '10' %>
        <% md_notice = "Note: Text entered will be rendered using #{ link_to('kramdown', admin_help_kramdown_path, target: '_blank') }".html_safe %>
        <%= f.input field, input_html: { class: "md field", rows: rows }, hint: md_notice %>
      </div>
    </div>
    <div class="col">
      <div class="yield">
        <% show_hint ||= false %>
        <% if show_hint %>
        <%= render "shared/form/md_hints" %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
</div>