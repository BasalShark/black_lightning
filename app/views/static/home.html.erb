<div class="row">
	<div class="span8">
		<div id="showSlider" class="carousel slide">
			<div class="carousel-inner">
				<% @shows.each do |show| %>
				<div class="<%= "active" if show == @shows.first %> item">
					<%= link_to (image_tag show.image.url(:slideshow)).html_safe, show_path(show) %>
					<div class="carousel-caption">
						<%= link_to "<h4>#{show.name}</h4>".html_safe, show_path(show) %>
						<p><%= show.tagline %> <span class="show-date">–<%=	l show.start_date, :format => :short %><%= " – #{l show.end_date, :format => :short}" unless show.start_date == show.end_date%></p>
					</div>
				</div>
				<% end %>
			</div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#showSlider" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#showSlider" data-slide="next">&rsaquo;</a>
		</div>

		<div class="row content">
			<% @news.first(2).each do |news| %>
			<div class="span4">
				<div>
					<%= link_to (image_tag news.image.url(:medium)), news_path(news) %>
					<h4><%= link_to news.title, news_path(news) %></h4>
					<p><%= render_markdown (truncate(news.body, length: 80)) %> <%= link_to 'Read More', news_path(news) %></p>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<div class="span4">
		<h3>What's On</h3>
		<ul>
          <% @shows.each do |show| %>
			<li><%= link_to show.name, show_path(show) %></li>
          <% end %>
		</ul>
        <h3>@BedlamTheatre</h3>
        <div>
          <% twitter_timeline.each do |tweet| %>
            <p><small><%= tweet.text %></small></p>
          <% end %>
        </div>
		<h3>Newsletter</h3>
		<p>Sign up to receive information about Bedlam Theatre and our shows.</p>
		<form class="form-inline">
			<input type="text" class="input-medium" /><button type="submit" class="btn">Sign up</button>
		</form>
	</div>
</div>

